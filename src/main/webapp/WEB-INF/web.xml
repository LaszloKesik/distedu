<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>DistEdu - Java Web Book</display-name>
  
  <servlet>
    <description></description>
    <display-name>ListCourses</display-name>
    <servlet-name>ListCourses</servlet-name>
    <servlet-class>hu.kesik.tutorials.distedu.view.ListCourses</servlet-class>
    <loadonstartup>1</loadonstartup>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListCourses</servlet-name>
    <url-pattern>/list_courses.view</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <description></description>
    <display-name>AddCourse</display-name>
    <servlet-name>AddCourse</servlet-name>
    <servlet-class>hu.kesik.tutorials.distedu.control.AddCourse</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddCourse</servlet-name>
    <url-pattern>/add_course.do</url-pattern>
  </servlet-mapping>
  
</web-app>